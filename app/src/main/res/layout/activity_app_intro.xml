<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_app_intro"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".activity.appintro.AppIntroActivity">

    <in.exuber.usmarket.fonts.MeterialDesignIcons.MaterialDesignIconsTextView
        android:id="@+id/ll_appIntro_dots"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|center_horizontal"
        android:minHeight="@dimen/space_35"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_16" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_appIntro_viewPager"
        android:layout_above="@+id/ll_appIntro_dots"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>



</RelativeLayout>