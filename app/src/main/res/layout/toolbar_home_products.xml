<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:id="@+id/homeProducts_toolBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?attr/actionBarSize"
    android:background="@color/colorWhite"
    local:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    local:popupTheme="@style/ThemeOverlay.AppCompat.Light">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/space_12"
        android:paddingTop="@dimen/space_12"
        android:paddingBottom="@dimen/space_12">

        <RelativeLayout
            android:id="@+id/rl_homeProducts_toolBar_editLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true">

            <in.exuber.usmarket.fonts.Barlow.BarlowRegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit"
                android:layout_margin="@dimen/space_8"
                android:textSize="@dimen/text_18"
                android:textColor="@color/colorPrimary"
                />



        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_homeProducts_toolBar_addLayout"
            android:layout_width="@dimen/space_24"
            android:layout_height="@dimen/space_24"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            >

            <ImageView
                android:id="@+id/iv_homeProducts_toolBar_add"
                android:layout_width="@dimen/space_24"
                android:layout_height="@dimen/space_24"
                android:src="@drawable/ic_add_primary"
                android:contentDescription="@string/add_icon"
                />


        </RelativeLayout>



        <in.exuber.usmarket.fonts.Barlow.BarlowMediumTextView
            android:id="@+id/tv_homeProducts_toolBar_headerText"
            android:layout_toLeftOf="@+id/rl_homeProducts_toolBar_addLayout"
            android:layout_toStartOf="@+id/rl_homeProducts_toolBar_addLayout"
            android:layout_toRightOf="@+id/rl_homeProducts_toolBar_editLayout"
            android:layout_toEndOf="@+id/rl_homeProducts_toolBar_editLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_18"
            android:gravity="center"
            android:maxLines="1"
            android:layout_centerInParent="true"
            android:textColor="@color/colorPrimary"/>



    </RelativeLayout>

</android.support.v7.widget.Toolbar>