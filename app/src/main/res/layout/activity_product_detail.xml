                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_10"
                            android:textColor="@color/colorDarkGrey"
                            android:text="@string/share_caps"
                            android:gravity="center|center_vertical"
                            android:layout_weight="1"
                            />
                    </LinearLayout>

                </RelativeLayout>


            </LinearLayout>





            <!--Product Image 3-->

            <LinearLayout
