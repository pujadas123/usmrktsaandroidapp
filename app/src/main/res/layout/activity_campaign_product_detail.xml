                android:id="@+id/ll_campaignProduct_detailsVideo_videoLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_campaignProduct_detailsVideo_playVideoClick"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_180"
                    android:layout_marginTop="@dimen/space_16"
                    android:background="@color/colorBlack"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/space_48"
                        android:layout_height="@dimen/space_48"
                        android:src="@drawable/ic_play_video_white"
                        android:contentDescription="@string/play_video_icon"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:padding="@dimen/space_16"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    >

