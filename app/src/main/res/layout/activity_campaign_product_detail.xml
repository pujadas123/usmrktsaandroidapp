<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_campaign_product_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundGrey"
    android:orientation="vertical"
    tools:context=".activity.productdetail.ProductDetailActivity">

    <include layout="@layout/toolbar_main" />


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:padding="@dimen/space_16">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="vertical"
                android:padding="@dimen/space_16">

                <in.exuber.usmarket.fonts.Barlow.BarlowMediumTextView
                    android:id="@+id/tv_campaignProductDetail_productName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/text_26" />

                <in.exuber.usmarket.fonts.Barlow.BarlowMediumTextView
                    android:id="@+id/tv_campaignProductDetail_productCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_5"
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/text_12" />

                <in.exuber.usmarket.fonts.Barlow.BarlowLightTextView
                    android:id="@+id/tv_campaignProductDetail_productPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_16"
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/text_16" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_1"
                    android:layout_marginTop="@dimen/space_5"
                    android:background="@color/colorLightGrey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_5"
                    android:orientation="horizontal">

                    <in.exuber.usmarket.fonts.Barlow.BarlowRegularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/space_5"
                        android:layout_marginRight="@dimen/space_5"
                        android:text="@string/commission_colon"
                        android:textColor="@color/colorGrey"
                        android:textSize="@dimen/text_12" />

                    <in.exuber.usmarket.fonts.Barlow.BarlowRegularTextView
                        android:id="@+id/tv_campaignProductDetail_productCommision"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/text_12" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_1"
                    android:layout_marginTop="@dimen/space_5"
                    android:background="@color/colorLightGrey" />


                <in.exuber.usmarket.fonts.Barlow.BarlowRegularTextView
                    android:id="@+id/tv_campaignProductDetail_productDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_12"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/text_12" />


            </LinearLayout>

            <!--Product Image 1-->

            <LinearLayout
                android:id="@+id/ll_campaignProduct_detailsThumbnail_oneLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_campaignProduct_detailsThumbnail_one"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_356"
                    android:layout_marginTop="@dimen/space_16"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/product_thumbnail"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:padding="@dimen/space_16"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    >

                    <LinearLayout
                        android:id="@+id/ll_campaignProduct_detailsThumbnail_shareLayoutOne"
                        android:layout_width="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <ImageView
                            android:id="@+id/iv_campaignProduct_detailsThumbnail_facebookShareClickOne"
                            android:layout_width="@dimen/space_20"
                            android:layout_height="@dimen/space_20"
                            android:src="@drawable/ic_facebook_primary"
                            android:contentDescription="@string/facebook_icon"
                            android:layout_marginRight="30dp"
                            android:layout_marginEnd="30dp"
                            />


                        <ImageView
                            android:id="@+id/iv_campaignProduct_detailsThumbnail_instagramShareClickOne"
                            android:layout_width="@dimen/space_20"
                            android:layout_height="@dimen/space_20"
                            android:src="@drawable/ic_instagram_primary"
                            android:contentDescription="@string/instagram_icon"
                            android:layout_marginRight="30dp"
                            android:layout_marginEnd="30dp"/>

                        <ImageView
                            android:id="@+id/iv_campaignProduct_detailsThumbnail_twitterShareClickOne"
                            android:layout_width="@dimen/space_20"
                            android:layout_height="@dimen/space_20"
                            android:src="@drawable/ic_twitter_primary"
                            android:contentDescription="@string/twitter_icon"
                            android:layout_marginRight="30dp"
                            android:layout_marginEnd="30dp"/>

                        <ImageView
                            android:id="@+id/iv_campaignProduct_detailsThumbnail_whatsappShareClickOne"
                            android:layout_width="@dimen/space_20"
                            android:layout_height="@dimen/space_20"
                            android:src="@drawable/ic_whatsapp_primary"
                            android:contentDescription="@string/whatsapp_icon"
                            android:layout_marginRight="20dp"
                            android:layout_marginEnd="20dp"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:weightSum="1">

                        <in.exuber.usmarket.fonts.Barlow.BarlowSemiBoldTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_10"
                            android:textColor="@color/colorDarkGrey"
                            android:text="@string/share_caps"
                            android:gravity="center|center_vertical"
                            android:layout_weight="1"
                            />
                    </LinearLayout>

                </RelativeLayout>


            </LinearLayout>





